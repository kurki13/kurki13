<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <context-param>
        <param-name>webmaster</param-name>
        <param-value>Harri.Laine@cs.Helsinki.FI</param-value>
    </context-param>
    <context-param>
        <param-name>configurationFile</param-name>
        <param-value>/home/tkt_kurk/kurki/webapps/kurkitest/WEB-INF/kurki.cnf</param-value>
    </context-param>
<!-- 
    <context-param>
    <param-name>properties</param-name>
    <param-value>/WEB-INF/velocity.properties</param-value>
    </context-param>
-->
    <servlet>
        <servlet-name>
	index
        </servlet-name>
        <servlet-class>
	  kurki.servlet.Index
        </servlet-class>
        <init-param>
          <param-name>properties</param-name>
          <param-value>/WEB-INF/velocity.properties</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>
	LoginManager
        </servlet-name>
        <servlet-class>
	  kurki.servlet.LoginManager
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
        checklist
        </servlet-name>
        <servlet-class>
          kurki.servlet.ListMaker
        </servlet-class>
        <init-param>
          <param-name>properties</param-name>
          <param-value>/WEB-INF/velocity.properties</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>
	logout
        </servlet-name>
        <servlet-class>
	  kurki.servlet.Logout
        </servlet-class>
    </servlet>

