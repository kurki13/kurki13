
#set($haetut = $OpiskelijaKyselyt.haeOpiskelijat($hetuFilter, $sukuFilter))

#if($haetut.size() == 50)
  <div class="alert alert-danger">
    <ul>
      Tarkenna hakua! Listassa aakkosjärjestyksessä 50 ensimmäistä hakukriteerejä vastaavaa opiskelijaa.
    </ul>
  </div>
#end


 #if($request.getParameter("lisattava"))
    <div class="alert alert-success">
      <ul>
        Opiskelija ($request.getParameter("lisattava")) lisätty kurssille $valittuKurssi.nimi ryhmään  $request.getParameter("ryhmanro").
         <form action="" name="tee" method=post > 
            <input type="hidden" name="hetu" value=$request.getParameter("lisattava")>
            <input name="tee" type="submit" value="Tiedot" class="btn btn-primary">
            <input name="tee" type="submit" value="Peruuta" class="btn btn-danger">
         </form>
       </ul>
    </div>
#end

<table class="table table-condensed table-bordered" style="max-width:1000px">
  <caption>
    $bundle.getString("opvalittu") $haetut.size()
  </caption>
  <tr>
    <th> $bundle.getString("nimiSyntpva") </th>
    <th> $bundle.getString("camelopnro") </th>
    <th> $bundle.getString("ryhma") </th>
    <th> Ilmoita kurssille </th>
  </tr>     

   #foreach($opiskelija in $haetut)
   <form action="" method="post" class="inline" style="margin:0;display:inline;" >
   <tr>
    <td>
      <b><a href="mailto:MAIL">$opiskelija.etunimi, $opiskelija.sukunimi</a></b>
    </td>
    <td>
      <center><tt>$opiskelija.hetu</tt></center>
    </td>
    <td>
      <center>
      <select name="ryhmanro">
      #foreach($ryhma in $ryhmat)
            <option #if($ryhma==$ryhmaFilter)selected#end value=$ryhma>$ryhma</option>
      #end
      </select>
      <input type="hidden" name="lisattava" value=$opiskelija.hetu>
      </center>
    </td>
    <td>
      <center>
      <input type="submit" value="lisää" class="btn btn-success btn-sm"> 
      </center>  
    </td>
  </tr>
  </form>
  #end

</table>
