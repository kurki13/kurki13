LH_Maksimi: <input name=lh_lisapistemaksimi value=$valittuKurssi.max_laskaripisteet>
LH_1.pisteenraja: <input name=lh_lisapistealaraja value=$valittuKurssi.lisapistealaraja>
LH_Kartuntaväli: <input name=lh_kartuntavali value=$valittuKurssi.lisapisteiden_askelkoko>

HT_Maksimi: <input name=ht_lisapistemaksimi value=$valittuKurssi.harjoitustyopisteet>
HT_1.pisteenraja: <input name=ht_lisapistealaraja value=$valittuKurssi.ht_lisapistealaraja>
HT_Kartuntaväli: <input name=ht_kartuntavali value=$valittuKurssi.harjoitustoiden_askelkoko>

KOE_Maksimi:$valittuKurssi.koeRajat.maxPisteetYhteensa
