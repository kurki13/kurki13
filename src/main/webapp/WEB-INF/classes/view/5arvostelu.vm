LH_Hyväksymisrajojen_summa: $valittuKurssi.laskariRajat.minPisteetYhteensa
LH_Osuuden_hyväksymisraja: <input name=lh_oshyv value=$valittuKurssi.pakolliset_laskaritehtava_lkm>

