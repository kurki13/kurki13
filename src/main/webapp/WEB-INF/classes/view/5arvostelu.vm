KOE_Saatavissa: $valittuKurssi.koeRajat.maxPisteetYhteensa
KOE_Hyväksymisrajojen_summa: $valittuKurssi.koeRajat.minPisteetYhteensa
KOE_Osuuden_hyväksymisraja: <input name=koe_oshyv value=$valittuKurssi.min_koepisteet_summa>

