#if($osallistumiset.size() == 0)
  $bundle.getString("opeivastannut")

#else
<table class="table table-condensed table-bordered" style="max-width:1000px">
  <caption>
   $bundle.getString("opvalittu") $osallistumiset.size()
  </caption>
  <tr>
    <th> $bundle.getString("nimiSyntpva") </th>
    <th> $bundle.getString("camelopnro") </th>
    <th> $bundle.getString("ryhma") </th>
    <th> $bundle.getString("suor") </th>
    <th> $bundle.getString("poistaKurssilta") </th>
    <th> $bundle.getString("naytaTiedot") </th>
  </tr>

<form action="" name=poista>
#foreach($osallinen in $osallistumiset)
  <tr>
    <td>
      <b><a href="mailto:">$osallinen.sukunimi, $osallinen.etunimi</a></b>
    </td>
    <td>
      <center>
        <tt>$osallinen.hetu</tt>
      </center>
    </td>
    <td>
      <center>
        <select name="grp" class="form-control form-inline" style="width:70px">
        #foreach($ryhma in $ryhmat)
          <option #if($osallinen.ilmo_jnro==$ryhma)selected#end>$ryhma</option>
        #end
        </select>
      </center>
    </td>
    <td>
      <center> #if($osallinen.arvosana.equals("+"))X#end</center>
    </td>
    <td>
      <center>
        <input type="checkbox" name="poistettavat">
      </center>
    </td>
    <td>
      <center>
        <form action="" name="tiedot" method="get">    
          <input type="hidden" name="hetuParam" value=$osallinen.hetu>
          <input name="tiedot" type="submit" value="Tiedot" class="btn btn-primary">
        </form>
      </center>
    </td>
  </tr>
#end

  <tr>
    <th colspan="6">
      <input type="hidden" name="doSaveAll" value="ok">
      <center>
        <input type="submit" class="btn btn-success" value="$bundle.getString("tallenMuutoksetIso")">
      </center>
    </th>
  </tr>
</table>

</form>
 
#end
