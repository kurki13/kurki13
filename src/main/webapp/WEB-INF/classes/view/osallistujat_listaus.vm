<table class="table table-condensed table-bordered" style="max-width:1000px">

  <tr>
    <th> Nimi (syntymäpäivä) </th>
    <th> OpNro </th>
    <th> Ryhmä </th>
    <th> Suor. </th>
    <th> Poista kurssilta </th>
    <th> Näytä tiedot </th>
  </tr>

#set($i = 0)
#foreach($osallis in $osallistumiset)
