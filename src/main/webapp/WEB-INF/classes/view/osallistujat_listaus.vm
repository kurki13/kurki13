$bundle.getString("opeivastannut")
#else
<p> Opiskelijoita: $i </p>

  <tr>
    <th colspan="6">
      <input type="hidden" name="doSaveAll" value="ok">
      <center><input type="submit" class="btn btn-success" value="$bundle.getString("tallenMuutoksetIso")"></center>
    </th>
  </tr>

</table>
