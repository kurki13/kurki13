       <th>$bundle.getString("ht_lyhenne")</th>
        #foreach ( $i in [1..$valittuKurssi.harjoitustyo_lkm] )
           <th>$i</th>       
        #end
    #end    
       #if ($valittuKurssi.valikokeet_lkm > 0)     
        <th>$bundle.getString("koe_lyhenne")</th>    
